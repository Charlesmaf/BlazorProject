@inherits LayoutComponentBase

<PageTitle>Jobs.Blazor.Server.Client</PageTitle>

<div class="page">
    <div class="sidebar @(collapseNavMenu ? "collapsed" : "")">
        <NavMenu CollapseNavMenu="@collapseNavMenu" CollapseNavMenuChanged="@ToggleNavMenu" />
    </div>

    <main>
        <div class="top-row px-4 d-none d-md-flex align-items-center justify-content-between flex-wrap">
            <div class="flex-grow-1 d-flex justify-content-center mb-2 mb-md-0">
                <div class="input-group w-auto">
                    <span class="input-group-text bg-white border-end-0 rounded-start">
                        <svg fill="#000000" width="20px" height="20px" viewBox="-0.063 -0.063 0.6 0.6" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMinYMin" class="jam jam-search">
                            <path d="M0.2 0.35A0.15 0.15 0 1 0 0.2 0.05a0.15 0.15 0 0 0 0 0.3m0.158 -0.027 0.09 0.09a0.025 0.025 0 1 1 -0.035 0.035l-0.09 -0.09a0.2 0.2 0 1 1 0.035 -0.035z" />
                        </svg>
                    </span>
                    <input type="text" class="form-control border-start-0 text-center rounded-all custom-placeholder" id="searchInput" placeholder="Search for a page" style="width: 180px;" />
                </div>
            </div>
            <div class="d-flex align-items-center gap-3 ms-auto">
                <button class="btn base-btn-bg text-center px-3 rounded-all">
                    <svg fill="#FFFFFF" width="20px" height="20px" viewBox="0 0 25.6 25.6" xmlns="http://www.w3.org/2000/svg" style="margin-right: 0.5em; vertical-align: middle;">
                        <path d="M12.8 0C5.731 0 0 5.731 0 12.8c0 7.07 5.731 12.8 12.8 12.8 7.07 0 12.8 -5.73 12.8 -12.8C25.6 5.731 19.87 0 12.8 0m0 24.025c-6.176 0 -11.2 -5.05 -11.2 -11.225 0 -6.176 5.024 -11.2 11.2 -11.2s11.2 5.024 11.2 11.2 -5.024 11.225 -11.2 11.225M18.4 12H13.6V7.2c0 -0.442 -0.358 -0.8 -0.8 -0.8s-0.8 0.358 -0.8 0.8v4.8H7.2c-0.442 0 -0.8 0.358 -0.8 0.8s0.358 0.8 0.8 0.8h4.8v4.8c0 0.442 0.358 0.8 0.8 0.8s0.8 -0.358 0.8 -0.8V13.6h4.8c0.442 0 0.8 -0.358 0.8 -0.8s-0.358 -0.8 -0.8 -0.8" />
                    </svg>
                    Quick Create
                </button>
                <div class="form-check m-0">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Name <br /> <span class="caption">Caption</span>
                    </label>
                </div>
            </div>
        </div>
        <article class="content px-4 light-gray-background">
            @Body
        </article>
    </main>
</div>
@code {
    private bool collapseNavMenu = false;

    private Task ToggleNavMenu(bool isCollapsed)
    {
        collapseNavMenu = isCollapsed;
        return Task.CompletedTask;
    }
}